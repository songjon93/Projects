<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context="cats.coding.istalku.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/distance_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:onClick="setGoalDistance"
            android:paddingVertical="30dp"
            android:src="@drawable/walk_icon" />

        <ProgressBar
            android:id="@+id/distanceProgressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/distance_icon"
            android:indeterminate="false"
            android:min="0"
            android:paddingHorizontal="20dp" />

        <TextView
            android:paddingBottom="20dp"
            android:id="@+id/distance_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/distanceProgressBar"
            android:layout_alignEnd="@id/distanceProgressBar"
            android:layout_alignStart="@id/distanceProgressBar"
            android:gravity="center_horizontal|bottom"
            android:text="Progress Rate"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:onClick="setGoalStep"
            android:id="@+id/steps_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/steps_icon"
            android:paddingVertical="30dp"/>

        <ProgressBar
            android:id="@+id/stepProgressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/steps_icon"
            android:indeterminate="false"
            android:min="0"
            android:paddingHorizontal="20dp" />


        <TextView
            android:paddingBottom="20dp"
            android:id="@+id/steps_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/stepProgressBar"
            android:layout_alignEnd="@id/stepProgressBar"
            android:layout_alignStart="@id/stepProgressBar"
            android:gravity="center_horizontal|bottom"
            android:text="Progress Rate"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:onClick="setGoalSpeed"
            android:id="@+id/speed_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speed_icon"
            android:paddingVertical="30dp"/>

        <ProgressBar
            android:id="@+id/speedProgressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_toEndOf="@id/speed_icon"
            android:indeterminate="false"
            android:min="0"
            android:paddingHorizontal="20dp" />



        <TextView
            android:paddingBottom="20dp"
            android:id="@+id/speed_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/speedProgressBar"
            android:layout_alignEnd="@id/speedProgressBar"
            android:layout_alignStart="@id/speedProgressBar"
            android:gravity="center_horizontal|bottom"
            android:text="Progress Rate"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

    </RelativeLayout>



</LinearLayout>
